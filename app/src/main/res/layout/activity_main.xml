<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#d2cece"
    tools:context="com.example.android.attendencetakerfinal.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <ImageButton
            android:id="@+id/attendence"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_weight="1"
            android:text="attendence"
            app:srcCompat="@mipmap/icon_attendance_take" />

        <ImageButton
            android:id="@+id/report"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_weight="1"
            app:srcCompat="@mipmap/reportsicon"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">
        <ImageButton
            android:id="@+id/note"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_weight="1"
            app:srcCompat="@mipmap/th"/>


        <ImageButton
            android:id="@+id/termtest"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_weight="1"
            app:srcCompat="@mipmap/termtest"/>
    </LinearLayout>
</LinearLayout>
